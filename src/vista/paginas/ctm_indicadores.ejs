<%- include("head"); %>
    <%- include("styles_gral"); %>

        <style>
            body {
                /*background-color: #eaedee;*/
                overflow-x: auto;
                overflow-y: auto;
            }

            body::-webkit-scrollbar {
                display: none;
                overflow-y: hidden;
            }
        </style>

        <body id="body_ent">
            <div class="preview text-center" id="preview"
                style="display: flex;justify-content: center;align-items: center; padding-top: 15px; padding-bottom: 15px;">
                <div class="card col-md-12" id="card-msg">


                </div>
            </div>

            <div class="col-md-12" style="text-align: center; margin-top: 0px;">
                <h2 class="text-center" style="color: #20488f;font-size: 20px">Registro de Indicadores
                </h2>
            </div>

            <div class="tabs-to-dropdown">

                <ul class="nav nav-pills d-none d-md-flex" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <div class="form-group" style="padding-left: 30px;margin: 20px;">
                            <button class="nav-link active btn btn-success" type="button"
                                style="border: 0; padding-top: 0px;height: 20px;" id="btn-nueva-linea"
                                onclick="nuevo_estrategia()" data-toggle="pill" href="" role="tab" aria-controls=""
                                aria-selected="true"><i class="fas fa-plus"></i> Indicador</button>

                        </div>
                    </li>
                    <li class="nav-item" role="presentation">
                        <div class="form-group" style="padding-left: 0px;margin: 20px;">

                            <button class="nav-link active btn btn-info" type="button"
                                style="border: 0; padding-top: 0px;height: 20px;" id="btn-nueva-linea" onclick=""
                                data-toggle="pill" href="" role="tab" aria-controls="" aria-selected="true"><i
                                    class="fas fa-list"></i> Lista</button>
                        </div>
                    </li>
                </ul>


                <div class="dropdown-divider"></div>

            </div>

            <div
                style="display: flex;justify-content: center;align-items: center;padding-bottom: 0px; margin-top: 0px;">


                <div class="col-md col-md-offset-3" style="padding-bottom: 0px">

                    <div class="card container" id="panel_nuevo_estrategia" style=" text-align: center;" hidden>



                        <form id="formulario" enctype="multipart/form-data" method="POST">

                            <div class="form-group row">
                                <label for="txt_onjetivo" class="col-2 col-form-label" style="font-weight: bold;">
                                    Indicador: </label>
                                <div class="col-10">
                                    <textarea class="form-control" type="text" name="txt_indicador" id="txt_indicador"
                                        value=""></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-2 col-form-label" style="font-weight: bold;">Plan: </label>
                                <div class="col-10">
                                    <select class="form-control"
                                    name="select_linea" id="select_linea" data-toggle="tooltip"
                                    title="Seleccionar Objetivo!" data-placement="right" required>
                                    <option selected="selected" value="">Seleccionar plan
                                    </option>
                                    <% lista_planes.forEach(lista=> { %>
                                        <option value="<%= lista.id_plan %>">
                                            <%= lista.plan %>
                                        </option>
                                        <% }); %>
                                </select>

                                </div>
                                
                            </div>



                            <div class="form-group col-sm-12 col-md-12" style="justify-content: center;">
                                <label class="" style="font-weight: bold;" for="select_objetivo">Area: </label>
                                <select class="form-select form-group form-control col-sm-12 col-md-6"
                                    name="select_objetivo" id="select_objetivo" data-toggle="tooltip"
                                    title="Seleccionar Objetivo!" data-placement="right" required>
                                    <option selected="selected" value="">Seleccionar area
                                    </option>
                                    <% lista_areas.forEach(lista=> { %>
                                        <option value="<%= lista.id_area %>">
                                            <%= lista.nombre_area %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>

                            <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                <label class="col-sm-12 col-md-3" for="txt_apellido" style="font-weight: bold;">
                                    Tipo Meta:&nbsp; </label>

                                <input class="col-sm-12 col-md-4" type="text" placeholder="Tipo de meta"
                                    name="txt_tipo_meta" id="txt_apellido" value="">
                            </div>

                            <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                <label class="col-sm-12 col-md-3" for="txt_fl_numerador" style="font-weight: bold;">
                                    Formula literal Numerador:&nbsp; </label>

                                <input class="col-sm-12 col-md-4" type="text" placeholder="numerador"
                                    name="txt_fl_numerador" id="txt_fl_numerador" value="">
                            </div>
                            <div class="dropdown-divider" style=""></div>
                            <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                <label class="col-sm-12 col-md-3" for="txt_fl_denominador" style="font-weight: bold;">
                                    Formula literal Denominador:&nbsp; </label>

                                <input class="col-sm-12 col-md-4" type="text" placeholder="Denominador"
                                    name="txt_fl_denominador" id="txt_fl_denominador" value="">
                            </div>

                            <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                <label class="col-sm-12 col-md-3" for="txt_meta_descriptiva"
                                    style="font-weight: bold;">Meta Descriptiva :&nbsp; </label>

                                <input class="col-sm-12 col-md-4" type="text" placeholder="meta Descriptiva"
                                    name="txt_meta_descriptiva" id="txt_meta_descriptiva" value="">
                            </div>

                            <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                <label class="col-sm-12 col-md-3" for="txt_apellido" style="font-weight: bold;">Formula
                                    Literal Descriptiva :&nbsp; </label>

                                <input class="col-sm-12 col-md-4" type="text" placeholder="Formula literal Descriptiva"
                                    name="txt_fl_descriptiva" id="txt_apellido" value="">
                            </div>
                            <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                <label class="col-sm-12 col-md-3" for="txt_nombre" style="font-weight: bold;">
                                    Nombre Indicador:<label for="" style="color:red;">*</label>&nbsp; </label>

                                <input class="col-sm-12 col-md-4" type="text" placeholder="ingresa nombre del indicador"
                                    name="txt_nombre" id="txt_nombre" value="">
                            </div>
                            <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                <label class="col-sm-12 col-md-3" for="txt_meta_numerica" style="font-weight: bold;">
                                    Meta númerica:<label for="" style="color:red;">*</label>&nbsp; </label>

                                <input class="col-sm-12 col-md-4" type="text" placeholder="ingresa la meta númerica"
                                    name="txt_meta_numerica" id="txt_meta_numerica" value="">
                            </div>




                            <div class="form-group col-sm-12"
                                style="display: flex;justify-content: center;align-items: center;margin-top: 10px;">
                                <div class="text-center">
                                    <button style="font-weight: bold;" class="btn btn-success btn-sm" id="btn-validar"
                                        name="btn-validar" onclick="almacenar_registro()">Guardar Estrategia</button>
                                </div>
                            </div>

                    </div>

                    </form>

                </div>
            </div>
            </div>

            </div>


            <div class="col-md-12" id="" name="" style="padding-bottom: 30px">

                <iframe src="" title="iframe Vistas control de mando" scrolling="no" onload='' frameBorder="0"
                    class="embed-responsive-item" width="100%" height="600px" name="iframe_obj" id="iframe_obj">
                </iframe>
            </div>
        </body>





        <script type="text/javascript">
            function almacenar_registro() {

                event.preventDefault();
                var txt_indicador = $('#txt_indicador').val();
                var select_objetivo = $('#select_objetivo').val();

                if (select_objetivo != "") {

                    if (txt_indicador != "") {

                        var peticion = "/persistir-estrategia/?estrategia=" + txt_indicador + "&objetivo=" + select_objetivo;

                        $.ajax({
                            type: 'post',
                            url: peticion,
                            data: [],
                            contentType: false,
                            cache: false,
                            processData: false,

                            success: function (result) {

                                //history.replaceState("/config-entidades", "Nueva Entidad Bips", "/config-entidades");

                                /*setTimeout(function() {
                                    window.location.reload(1);
                                }, 5000);*/
                                if (result["status"] == 200) {

                                    $('#preview').show();

                                    $('#card-msg').html("<div style='' class='card-header text-white bg-success mb-3 container-fluid' id='btn-cerrar'><strong>Operación exitosa!</strong><button type='button' class='close' aria-label='Close'> <span aria-hidden='true'>&times;</span></button></div><div class='card-body-ok' id='card-body-ok'>" + result["msg"] + "</div>");

                                    $('#card-msg').show();

                                    $('#formulario')[0].reset();

                                    //$('#select_linea').focus();

                                    var iframe = document.getElementById('iframe_obj');

                                    $('#iframe_obj').attr("src", iframe.src);
                                    $("#iframe_obj").show();

                                    setTimeout(function () {
                                        $('#preview').hide();
                                    }, 4000);


                                } else {
                                    $('#preview').show();

                                    $('#card-msg').html("<div style='' class='card-header text-white bg-danger mb-3 container-fluid' id='btn-cerrar'><strong>Error!</strong><button type='button' class='close' aria-label='Close'> <span aria-hidden='true'>&times;</span></button></div><div class='card-body-ok' id='card-body-ok'>" + result["msg"] + "</div>");

                                    $('#card-msg').show();

                                    setTimeout(function () {
                                        $('#preview').hide();
                                    }, 5000);

                                    //$('#formulario')[0].reset();

                                    //$('#select_plan').focus();

                                }

                                //$('#body_ent').html(result);


                            }

                        });

                    } else {
                        $('#txt_indicador').focus();
                    }


                } else {
                    //alert("debe escoger una plan gral");
                    $('#select_objetivo').focus();
                    //$('#txt_indicador').focus();


                }
            }



            function nuevo_estrategia() {
                //alert("OK");



                $('#panel_nuevo_estrategia').attr('hidden', false);


            }


        </script>