<%- include("head"); %>
    <%- include("styles_gral"); %>

        <style>
            body {
                /*background-color: #eaedee;*/
                overflow-x: auto;
                overflow-y: auto;
            }
            
            body::-webkit-scrollbar {
                display: none;
                overflow-y: hidden;
            }
        </style>

        <body id="body_ent">
            <div class="preview text-center" id="preview" style="display: flex;justify-content: center;align-items: center; padding-top: 15px; padding-bottom: 15px;">
                <div class="card col-md-12" id="card-msg">


                </div>
            </div>

            <div class="col-md-12" style="text-align: center; margin-top: 0px;">
                <h2 class="text-center" style="color: #20488f;font-size: 20px">Registro de Indicadores
                </h2>
            </div>

            <div class="tabs-to-dropdown">

                <ul class="nav nav-pills d-none d-md-flex" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <div class="form-group" style="padding-left: 30px;margin: 20px;">
                            <button class="nav-link active btn btn-success" type="button" style="border: 0; padding-top: 0px;height: 20px;" id="btn-nueva-linea" onclick="nuevo_estrategia()" data-toggle="pill" href="" role="tab" aria-controls="" aria-selected="true"><i class="fas fa-plus"></i> Indicadores</button>
                        </div>
                    </li>
                </ul>

                <div class="dropdown-divider"></div>

            </div>

            <div style="display: flex;justify-content: center;align-items: center;padding-bottom: 0px; margin-top: 0px;">


                <div class="col-md col-md-offset-3" style="padding-bottom: 0px">

                    <div class="card container" id="panel_nuevo_estrategia" style=" text-align: center;" hidden>



                        <form id="formulario" enctype="multipart/form-data" method="POST">

                            <div class="well form-inline">


                                <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;">
                                    <label for="txt_onjetivo" style="font-weight: bold;"> Indicador </label>

                                    <textarea class="col-sm-12 col-md-12 " type="text" name="txt_indicador" id="txt_indicador" value=""></textarea>

                                    
                                </div>
                                &nbsp;&nbsp;
                                

                                <div class="form-group col-sm-12 col-md-12 text-center" style="justify-content: center;"></div>
                                <label style="font-weight: bold;">Area: </label>

                                <select class="form-select form-group form-control input-sm col-md-6" name="select_linea" id="select_linea" data-toggle="tooltip" title="Seleccionar Objetivo!" data-placement="right" required>
                                    <option selected="selected" value="">Seleccionar Area
                                    </option>
                                    <% lista_planes.forEach(lista=> { %>
                                        <option value="<%= lista.id_plan %>">
                                            <%= lista.plan %>
                                        </option>
                                        <% }); %>
                                </select>
                                

                                <label style="font-weight: bold;">Plan: </label>

                                <select class="form-select form-group form-control input-sm col-md-6" name="select_objetivo" id="select_objetivo" data-toggle="tooltip" title="Seleccionar Objetivo!" data-placement="right" required>
                                    <option selected="selected" value="">Seleccionar Plan
                                    </option>
                                    <% lista_areas.forEach(lista=> { %>
                                        <option value="<%= lista.id_area %>">
                                            <%= lista.nombre_area %>
                                        </option>
                                        <% }); %>
                                </select>
                            

                            </div>
                            

                                <div class="form-group col-sm-12" style="display: flex;justify-content: center;align-items: center;margin-top: 10px;">
                                    <div class="text-center">
                                        <button style="font-weight: bold;" class="btn btn-success btn-sm" id="btn-validar" name="btn-validar" onclick="almacenar_registro()">Guardar Estrategia</button>
                                    </div>
                                </div>

                            </div>

                        </form>

                    </div>
                </div>
            </div>

            </div>


            <div class="col-md-12" id="" name="" style="padding-bottom: 30px">

                <iframe src="/listado-ctm-estrategias" title="iframe Vistas control de mando" scrolling="no" onload='' frameBorder="0" class="embed-responsive-item" width="100%" height="600px" name="iframe_obj" id="iframe_obj">
                    </iframe>
            </div>
        </body>





        <script type="text/javascript">
            function almacenar_registro() {

                event.preventDefault();
                var txt_indicador = $('#txt_indicador').val();
                var select_objetivo = $('#select_objetivo').val();

                if (select_objetivo != "") {

                    if (txt_indicador != "") {

                        var peticion = "/persistir-estrategia/?estrategia=" + txt_indicador + "&objetivo=" + select_objetivo;

                        $.ajax({
                            type: 'post',
                            url: peticion,
                            data: [],
                            contentType: false,
                            cache: false,
                            processData: false,

                            success: function(result) {

                                //history.replaceState("/config-entidades", "Nueva Entidad Bips", "/config-entidades");

                                /*setTimeout(function() {
                                    window.location.reload(1);
                                }, 5000);*/
                                if (result["status"] == 200) {

                                    $('#preview').show();

                                    $('#card-msg').html("<div style='' class='card-header text-white bg-success mb-3 container-fluid' id='btn-cerrar'><strong>Operaci√≥n exitosa!</strong><button type='button' class='close' aria-label='Close'> <span aria-hidden='true'>&times;</span></button></div><div class='card-body-ok' id='card-body-ok'>" + result["msg"] + "</div>");

                                    $('#card-msg').show();

                                    $('#formulario')[0].reset();

                                    //$('#select_linea').focus();

                                    var iframe = document.getElementById('iframe_obj');

                                    $('#iframe_obj').attr("src", iframe.src);
                                    $("#iframe_obj").show();

                                    setTimeout(function() {
                                        $('#preview').hide();
                                    }, 4000);


                                } else {
                                    $('#preview').show();

                                    $('#card-msg').html("<div style='' class='card-header text-white bg-danger mb-3 container-fluid' id='btn-cerrar'><strong>Error!</strong><button type='button' class='close' aria-label='Close'> <span aria-hidden='true'>&times;</span></button></div><div class='card-body-ok' id='card-body-ok'>" + result["msg"] + "</div>");

                                    $('#card-msg').show();

                                    setTimeout(function() {
                                        $('#preview').hide();
                                    }, 5000);

                                    //$('#formulario')[0].reset();

                                    //$('#select_plan').focus();

                                }

                                //$('#body_ent').html(result);


                            }

                        });

                    } else {
                        $('#txt_indicador').focus();
                    }


                } else {
                    //alert("debe escoger una plan gral");
                    $('#select_objetivo').focus();
                    //$('#txt_indicador').focus();


                }
            }



            function nuevo_estrategia() {
                //alert("OK");



                $('#panel_nuevo_estrategia').attr('hidden', false);


            }

           
        </script>