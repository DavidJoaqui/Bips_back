                    $.ajax({

                        type: 'get',
                        url: peticion,
                        data: [],
                        contentType: false,
                        cache: false,
                        processData: false,

                        success: function (result) {

                            //select_linea
                            $("#select_linea").html("");

                            $("#select_linea").append('<option selected="selected">' + 'Seleccionar linea de acci贸n' + '</option>');

                            result.forEach(element => {

