<%- include("head"); %>
    <%- include("styles_gral"); %>

        <style>
            body {
                /*background-color: #eaedee;*/
                overflow-x: auto;
                overflow-y: auto;
            }
            
            body::-webkit-scrollbar {
                display: auto;
                overflow-y: hidden;
            }
        </style>


        <div class="col-md-12" id="" name="" style="margin-top: 10px;">


            <div class="col-md-12">

                <div>
                    <span class="titulo-tabla" style="font-weight: bold;text-align: left;">
                        <h2> Planes Generales</h2>
                    </span>
                </div>

                <% const m=getMessages() %>

                    <% if (m.notify) { %>

                        <div class="card" style="margin-top: 20px;" id="card-success">
                            <div class="card-header text-white bg-success mb-3 container-fluid" id="btn-cerrar-ok">
                                <strong>OK!</strong>
                                <button type="button" class="close" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="card-body">

                                <% m.notify.forEach((element)=> { %>

                                    <%= element %>
                                        <% }) %> %>
                            </div>


                        </div>

                        <% } %>
                            <% if (m.error) { %>

                                <div class="card " style="margin-top: 20px;">
                                    <div class="card-header text-white bg-danger mb-3 container-fluid" id="btn-cerrar-err">
                                        <strong>Error!</strong>
                                        <button type="button" class="close" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <div class="card-body">

                                        <% m.error.forEach((element)=> { %>

                                            <%= element %>
                                                <% }) %> %>
                                    </div>

                                </div>

                                <% } %>

                                    <p type="text" id="loading" value="" hidden>loading...</p>
                                    <div class="table-responsive">

                                        <table class="table table-striped table-bordered" style="width:100%" id="tbl_planos">


                                            <thead class="head-tabla-reg">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Nombre plan</th>
                                                    <th>Acciones</th>

                                                </tr>
                                            </thead>
                                            <tbody id="developers">
                                                <% for(var i=0; i<lista_planes.length; i++) { %>

                                                    <tr class="text-center">
                                                        <td>
                                                            <%= lista_planes[i].id_plangeneral %>

                                                        </td>
                                                        <td>
                                                            <%= lista_planes[i].plan_general %>
                                                        </td>
                                                        <td class="btns-acciones">
                                                            <a href="" title="Editar" onclick="editar_plan()"><i class="fas fa-edit"></i></a>
                                                            <a href="" title="Eliminar" style="color: red;"><i class="far fa-trash-alt"></i></a>
                                                        </td>

                                                    </tr>
                                                    <% }%>
                                            </tbody>
                                            <tfoot>

                                            </tfoot>
                                        </table>

                                    </div>
            </div>


            <style>
                #tbl_planos {
                    font-size: small;
                    font-family: 'Montserrat', sans-serif;
                    border-spacing: 0px !important;
                    padding: 0px;
                }
                
                #tbl_planos th {
                    padding: 7px;
                }
                
                #tbl_planos td {
                    padding: 0;
                }
                
                .btns-acciones form .btn-submit {
                    font-family: 'Montserrat', sans-serif;
                    border-radius: 5px;
                    font-size: 10px;
                    border: none;
                    cursor: pointer;
                    transition: .3s ease all;
                    font-weight: bold;
                }
                
                #btn-elim-all {
                    font-family: 'Montserrat', sans-serif;
                    border-radius: 5px;
                    font-size: 10px;
                    border: none;
                    cursor: pointer;
                    transition: .3s ease all;
                }
                
                .head-tabla-reg {
                    background-color: #3f78da;
                    color: #fff;
                }
                
                .titulo-tabla {
                    color: #20488f;
                }
            </style>


            <script type="text/javascript">
                function editar_plan() {
                    alert("ok desde lista plan general");

                }
            </script>