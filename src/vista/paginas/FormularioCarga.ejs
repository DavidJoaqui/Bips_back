<%- include("header"); %>
    <%- include("head"); %>
        <div class="container-fluid">

            <div class="row" style="margin-top:70px">


                <div class="col-md-3" style="margin-top:30px;margin-left: 20px;">

                    <div class="form-group row">


                        <div class="panel panel-primary">

                            <div class="panel-heading">Carga Archivos Planos</div>

                            <div class="panel-body">
                                <form id="formulario_validacion" method="get">

                                    <div class="form-group">

                                        <div class="form-group col-xs-12">
                                            <label>Seleccionar IPS</label>

                                            <select class="form-select form-group form-control col-xs-6 col-md-6" name="cbxips" id="cbxips">

                                            <% listaIps.forEach(lista=> { %>
                                                <option value="<%= lista.codigo_ips %>">
                                                    <%= lista.codigo_ips + "(" + lista.descripcion_ips +")" %>
                                                </option>
                                                <% }); %>
                                        </select>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group col-md-6 col-xs-12">
                                                <label for="fecha_ini">Fecha inicial</label>
                                                <div>
                                                    <input type="date" name="txtfecha_inicial" id="txtfecha_inicial" value="2020-01-01" min="2018-01-01" max="2021-12-31">
                                                </div>
                                            </div>

                                            <div class="form-group col-md-6 col-xs-12">
                                                <label for="fecha_ini">Fecha Final</label>
                                                <div>
                                                    <input type="date" name="txtfecha_fin" id="txtfecha_fin" value="2020-02-15" min="2018-01-01" max="2021-12-31">
                                                </div>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="form-group col-md-12" style="text-align: center;">
                                        <div>
                                            <button class="btn btn-primary">Consultar Registros</button>
                                        </div>
                                    </div>


                                    <div class="preview">
                                        <div id="datos_val"></div>
                                    </div>
                                </form>



                                <div class="form-group row">
                                    <form id="formulario" enctype="multipart/form-data" method="POST" class="navbar-form navbar-left">

                                        <input type="file" name="files" id="files" class="form-group col-md-12 col-sm-8" disabled="disabled">
                                        <p>&nbsp;</p>
                                        <button class="btn btn-primary btn-md" id="btn-subir" name="btn-subir" disabled="disabled">Subir</button>

                                        <div class="preview">
                                            <div id="datos"></div>
                                        </div>
                                    </form>
                                </div>


                            </div>

                        </div>



                    </div>
                </div>


                <div class="col-md-8">
                    <div class="col-md-12 embed-responsive embed-responsive-16by9">
                        <iframe src="listadoArchivos" title="Archivos cargados" class="embed-responsive-item" name="iframe_arch" id="iframe_arch">
                        </iframe>
                    </div>
                </div>


            </div>

            <script>
                $(document).ready(function() {

                    const $form = document.querySelector('#formulario');
                    const $form_val = document.querySelector('#formulario_validacion');

                    $("#files").change(function() {
                        $("#btn-subir").prop("disabled", this.files.length == 0);
                    });

                    $("#cbxips").change(function() {
                        $("#btn-subir").prop("disabled", true);
                        $('#files').attr("disabled", true);
                    });

                    $form.addEventListener('submit', (event) => {

                        event.preventDefault();


                        $.ajax({
                            type: 'POST',
                            url: '/files',
                            data: new FormData($form),
                            contentType: false,
                            cache: false,
                            processData: false,

                            beforeSend: function() {
                                $('#datos').html('<p>Procesando...</p>');
                            },
                            error: function() {
                                $('#datos').html('<p><span class="glyphicon glyphicon-warning-sign" style="color:red"></span> Solo se permiten archivos .txt');
                                $('#formulario')[0].reset();

                            },
                            success: function(result) {

                                $('#formulario')[0].reset();
                                //$('#datos').html('');
                                //$('#btn-subir').attr("disabled", true);
                                if (result['estado'] == '200') {
                                    $('#datos').html('<p><span class="glyphicon glyphicon-ok" style="color:green"></span>La operacion se ejecuto con exito...</p>');
                                    console.log(JSON.stringify(result['respuesta']));
                                    $("#iframe_arch").show();
                                    var iframe = document.getElementById('iframe_arch')
                                    $('#iframe_arch').attr("src", iframe.src);
                                    $("#btn-subir").prop("disabled", true);
                                    $('#files').attr("disabled", true);

                                    alert("Los archivos se cargaron correctamente!");
                                } else {
                                    alert("ocurrio un error...");
                                }

                            }

                        });

                    });


                    $form_val.addEventListener('submit', (event) => {

                        event.preventDefault();
                        const peticion = "/validar-registros-ap/" + $('#cbxips').val() + "?fecha_inicial='" + $('#txtfecha_inicial').val() + "'&fecha_fin='" + $('#txtfecha_fin').val() + "'";

                        $.ajax({
                            type: 'get',
                            url: peticion,
                            data: [],
                            contentType: false,
                            cache: false,
                            processData: false,

                            /* beforeSend: function () {
                                 $('#datos_val').html('<p>Procesando...</p>');
                             },
                             error: function () {
                                 $('#datos_val').html('<p>Error intente de nuevo...</p>');
                             },*/

                            success: function(result) {
                                //$('#formulario_validacion')[0].reset();
                                //$('#datos').html('');
                                //$('#btn-subir').attr("disabled", true);

                                //$('#datos_val').html('<p><span class="glyphicon glyphicon-ok" style="color:green"></span>' + JSON.stringify(result['respuesta'][0]) + '</p>');

                                if (result != 0) {
                                    //alert("<div class='alert alert-success' role='alert'>Tiene registros!</div>");
                                    alert("La IPS " + $('#cbxips').val() + " tiene Registros de Archivos Planos para el Rango de Fecha: " + $('#txtfecha_inicial').val() + " hasta " + $('#txtfecha_fin').val());
                                    $('#btn-subir').attr("disabled", true);
                                } else {
                                    $('#files').attr("disabled", false);
                                    alert("No Tiene registros, puede proceder a cargar los planos");

                                }

                            }

                        });

                    });



                });
            </script>

        </div>

        <%- include("footer"); %>