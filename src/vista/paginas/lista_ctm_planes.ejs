<%- include("head"); %>
    <%- include("styles_gral"); %>

        <div class="col-md-12" id="" name="" style="margin-top: 10px;">


            <div class="col-md-12">

                <div>
                    <span class="titulo-tabla" style="font-weight: bold;text-align: left;">
                        <h2> Planes</h2>
                    </span>
                </div>



                <div class="table-responsive">

                    <table class="table table-striped table-bordered" id="tbl_planos">


                        <thead class="head-tabla-reg">
                            <tr>
                                <th>#</th>
                                <th>Plan</th>
                                <th>Acciones</th>

                            </tr>
                        </thead>
                        <tbody id="developers">
                            <% for(var i=0; i<lista_Planes.length; i++) { %>

                                <tr class="text-justify sorting_1" style="font-size: 0.8em; line-height: 1.4em;">
                                    <td>
                                        <%= i+1 %>

                                    </td>
                                    <td>
                                        <%= lista_Planes[i].plan %>
                                    </td>

                                  

                                    <td class="btns-acciones">
                                        <a href="" title="Editar"><i class="fas fa-edit"></i></a>
                                        <a href="" title="Eliminar" style="color: red;"><i class="far fa-trash-alt"></i></a>
                                    </td>

                                </tr>
                                <% }%>
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>

                </div>
            </div>


            <style>
                body {
                    /*background-color: #eaedee;*/
                    overflow-x: auto;
                    overflow-y: auto;
                    
                }

                
                body::-webkit-scrollbar {
                    display: auto;
                    overflow-y: hidden;
                    
                }
                
                #tbl_planos {
                    font-size: small;
                    font-family: 'Montserrat', sans-serif;
                    border-spacing: 0px !important;
                    padding: 0px;
                   
                }
                
                #tbl_planos th {
                    padding: 7px;
                }
                
                #tbl_planos td {
                    padding: 0;
                }
                
                
                .btns-acciones form .btn-submit {
                    font-family: 'Montserrat', sans-serif;
                    border-radius: 5px;
                    font-size: 10px;
                    border: none;
                    cursor: pointer;
                    transition: .3s ease all;
                    font-weight: bold;
                }
                
                #btn-elim-all {
                    font-family: 'Montserrat', sans-serif;
                    border-radius: 5px;
                    font-size: 10px;
                    border: none;
                    cursor: pointer;
                    transition: .3s ease all;
                }
                
                .head-tabla-reg {
                    background-color: #3f78da;
                    color: #fff;
                    
                }
                
                .titulo-tabla {
                    color: #20488f;
                }
            </style>