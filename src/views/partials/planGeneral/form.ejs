<form id="formPlanGeneral">


    <input type="text" name="id_plan" style="display: none;" value="<%= id_plan %>">

      <label class="block mt-4 text-sm">
        <span class="text-gray-700 dark:text-gray-400">
            Nombre del plan General:
        </span>
        <input  name="nombre_plan" value="<%= info_plan.length && info_plan[0].plan_general? info_plan[0].plan_general:'' %>"  class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input" placeholder="Nombre plan"  required>
      </label>

      
      <label class="block mt-4 text-sm">
        <span class="text-gray-700 dark:text-gray-400">
            Fecha inicial
        </span>
        <input  type="date" name="fecha_inicial" value="<%= info_plan.length && info_plan[0].fecha_inicial? info_plan[0].fecha_inicial : '' %>"  class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input" min="2018-01-01" max="2099-12-31" required>
      </label>


      
      <label class="block mt-4 text-sm">
        <span class="text-gray-700 dark:text-gray-400">
            Fecha Final
        </span>
        <input type="date"   name="fecha_fin" value="<%= info_plan.length && info_plan[0].fecha_final? info_plan[0].fecha_final: '' %>"  class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray form-input" min="2018-01-01" max="2099-12-31" required>
      </label>
      <br/>

      <% if (info_plan.length && info_plan[0].estado) { %>
        <label class="flex items-center dark:text-gray-400">
            <input type="checkbox" name="activo"  checked class="text-purple-600 form-checkbox focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray">
            <span class="ml-2">
                Activo
            </span>
          </label>
        <% } else { %>
            <label class="flex items-center dark:text-gray-400">
                <input type="checkbox" name="activo" class="text-purple-600 form-checkbox focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray">
                <span class="ml-2">
                    Activo
                </span>
              </label>
            <% } %>



    <button hidden id="btnForm" type="submit"></button>
</form>

<script>
const form = document.querySelector("#formPlanGeneral");

form.addEventListener("submit", function (event) {
	// Stop form submission
	event.preventDefault();
    const data=Object.fromEntries(new FormData(form));
    data.activo? data.activo=true: data.activo=false;
    if(data.id_plan!='0'){
        updateAjax('/actualizar-plan-general',data,reloadContainer)
    }else{
        createdAjax('/persistir-plan',data,reloadContainer)
    }

});

</script>